		Текст = "ru = 'Изменилась скидка. Пересчитать сумму по услугам?' ";
		Ответ = Ждать ВопросАсинх(НСтр(Текст), Режим, 0);
		Если Ответ = КодВозвратаДиалога.Да Тогда
			Для Каждого СтрокаТЧ Из Объект.Услуги Цикл
				
				РассчитатьСуммуСтроки(СтрокаТЧ);
				
			КонецЦикла;	
		КонецЕсли;	
		
	КонецЕсли;		
